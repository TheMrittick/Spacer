<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <!-- Topic name -->
    <TextView
        android:id="@+id/topicNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#0CD80E"
        />

    <!-- Next review date -->
    <TextView
        android:id="@+id/nextReviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next review: Tomorrow"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"/>

    <!-- Review count -->
    <TextView
        android:id="@+id/reviewCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviewed: 2 times"
        android:textSize="12sp"
        android:textColor="#6B886B"
        android:layout_marginTop="4dp"/>

    <!-- Buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Mark as reviewed button -->
        <Button
            android:id="@+id/markReviewedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mark as Reviewed"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/button_primary"
            />

        <!-- Delete button -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="14sp"
            android:backgroundTint="#EF2A2A"/>

    </LinearLayout>

</LinearLayout>