<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title at the top -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spaced Repetition"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <!-- Input field for new topic -->
    <EditText
        android:id="@+id/topicInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="16dp"
        android:hint="Enter topic name"
        android:inputType="text"
        android:padding="12dp"/>

    <!-- Button to add topic -->
    <Button
        android:id="@+id/addTopicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topicInput"
        android:layout_marginTop="8dp"
        android:text="Add Topic"
        android:textSize="16sp"
        android:textColor="@color/button_text"
        android:backgroundTint="@color/button_primary"
        />

    <!-- List of topics -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topicsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addTopicButton"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>